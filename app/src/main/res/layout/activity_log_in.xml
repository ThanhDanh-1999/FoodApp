<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8F8"
        android:clickable="true"
        tools:context=".LogInActivity">

        <Button
            android:id="@+id/back_from_login"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/border_selected"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="&lt;"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="519dp"
            android:layout_height="184dp"
            android:layout_marginBottom="616dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            tools:srcCompat="@drawable/back_ground_1" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="27dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sofia_pro"
                android:text="Login"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="5dp"
                    android:text="E-mail"
                    android:textColor="#9796A1"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/LoginEmailEntered"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/switch_border"
                    android:ems="10"
                    android:fontFamily="@font/sofia_pro"
                    android:hint="Your email or phone"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="5dp"
                    android:text="Password"
                    android:textColor="#9796A1"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/LoginPasswordEntered"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/switch_border"
                    android:ems="10"
                    android:fontFamily="@font/sofia_pro"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/sofia_pro_medium"
                android:gravity="center"
                android:text="Forgot password?"
                android:textColor="#FE724C" />
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="248dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/stroke_button_shape"
            android:fontFamily="@font/sofia_pro_medium"
            android:text="Login"
            android:textSize="15sp"
            app:backgroundTint="#FE724C"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Don't have an account?" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:paddingLeft="5dp"
                android:text="Sign Up"
                android:textColor="#FE724C" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="27dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:srcCompat="@drawable/signin_with_others" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="168dp"
            android:layout_marginLeft="168dp"
            android:layout_marginTop="10dp"
            android:text="Sign in with"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintVertical_bias="0.045" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintVertical_bias="0.223"
            tools:layout_editor_absoluteX="0dp"
            android:gravity="center">

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_margin="10dp"
                android:background="@drawable/stroke_button_shape"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/facebook_icon"
                android:fontFamily="@font/sofia_pro_medium"
                android:text="FACEBOOK"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF" />

            <Button
                android:id="@+id/button4"
                android:layout_width="147dp"
                android:layout_height="57dp"
                android:layout_margin="10dp"
                android:background="@drawable/stroke_button_shape"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/google_icon"
                android:fontFamily="@font/sofia_pro_medium"
                android:text="GOOGLE"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>